<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="movie"
            type="com.example.everypractice.prinoptions.movies.data.models.MovieSearchElementGson" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="200dp"
        android:theme="@style/Theme.EveryPracticeMovie"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        tools:ignore="ContentDescription"
        android:layout_margin="8dp"
        android:layout_height="300dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/img_movie_path"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:imageUrl="@{movie.posterUrl}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/img_pacific_rim" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="8.9"
                android:textColor="#efb001"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/ic_star"
                app:layout_constraintStart_toEndOf="@+id/ic_star"
                app:layout_constraintTop_toTopOf="@+id/ic_star" />

            <ImageView
                android:id="@+id/ic_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/img_movie_path"
                app:layout_constraintStart_toStartOf="@+id/img_movie_path"
                app:layout_constraintTop_toTopOf="@+id/img_movie_path"
                app:layout_constraintVertical_bias="0.57"
                app:srcCompat="@drawable/ic_star" />

            <TextView
                android:id="@+id/movie_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxWidth="200dp"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="22sp"
                tools:text="NAME MOVIE"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/img_movie_path" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>